{
    "name": "functions",
    "version": "1.0.0",
    "description": "Cloud Functions for IhuOfertas Affiliate Hub",
    "main": "lib/index.js",
    "scripts": {
        "lint": "eslint --ext .js,.ts .",
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test-creative": "tsc src/test-creative-local.ts --outDir lib --lib ES2020,DOM --module commonjs --esModuleInterop --skipLibCheck && node lib/test-creative-local.js"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "canvas": "^3.2.1",
        "cheerio": "^1.2.0",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^5.0.0",
        "node-fetch": "^2.7.0",
        "sharp": "^0.34.5"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/node-fetch": "^2.6.13",
        "typescript": "^5.0.0"
    },
    "private": true
}
