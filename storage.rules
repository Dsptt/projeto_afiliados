rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Assets folder: public read, admin write
    match /assets/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Creatives folder: public read (for sharing), admin write
    match /creatives/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
